{
  "name": "digitalstage-server",
  "version": "0.0.1",
  "description": "Mediasoup server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch './src/**/*.ts' --exec 'ts-node' src/server.ts",
    "build": "npm run build-ts && npm run lint",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build-ts": "tsc",
    "deploy-production": "pm2 deploy ecosystem.config.js production --force",
    "reload-production": "pm2 deploy ecosystem.config.js production exec 'pm2 reload digitalstage-server'"
  },
  "author": "Tobias Hegemann",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "mediasoup": "^3.5.7",
    "socket.io": "latest",
    "cors": "latest",
    "timesync": "latest",
    "ip": "latest"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/ip": "^1.1.0",
    "@types/node": "^13.11.1",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.3",
    "pm2": "^4.2.3",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
